<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="match_parent"
    tools:context="com.example.mohitpal.upload.selectoption">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Multiple File Uploads"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#1f2b78"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/multiple_uploads"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Files To Upload"
        android:layout_below="@+id/multiple_uploads"
        android:layout_marginTop="20dp"
        android:background="#1f2b78"
        android:textColor="#fff"
        android:textStyle="bold"
        android:id="@+id/select_images"
        android:layout_centerHorizontal="true"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_images"
        android:id="@+id/recyclerview"
        android:layout_marginTop="10dp"></android.support.v7.widget.RecyclerView>
</RelativeLayout>
