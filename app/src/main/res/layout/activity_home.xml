<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mohitpal.rentme.Home">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/layoutapp"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#dceae7d7"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/layy"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:onClick="drawer"
                android:src="@drawable/ic_settings"
                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="220dp"

                android:src="@drawable/ic_search"
                />

        </LinearLayout>




        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/layy"
            android:layout_above="@+id/bottom_navigation"
            android:id="@+id/main_frame">

        </FrameLayout>

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="?android:attr/windowBackground"
            app:menu="@menu/navigation" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#00ffffff"
        android:layout_gravity="left">
        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:background="#fdc1bdaa"
            android:onClick="user_profile"
            android:elevation="20dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_above="@+id/email_idd"
                android:src="@drawable/ic_profile"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/home_profile"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="mohit@gmail.com"
                android:textSize="20dp"
                android:id="@+id/email_idd"

                android:layout_alignParentBottom="true"
                />

        </RelativeLayout>
        <View
            android:layout_width="250dp"
            android:layout_height="1dp"
            android:background="#000"
            />
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#b7b4a1"
            android:elevation="20dp"
            android:onClick="home"
            android:padding="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_home"/>

            <TextView
                android:id="@+id/home"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Home"
                android:textColor="#000"
                android:textSize="20dp"
                />

        </LinearLayout>


        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:background="#000"
            />
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#a9a68f"
            android:elevation="20dp"
            android:padding="10dp"
            android:onClick="setting">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_settings"
                android:id="@+id/setting"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="settings"
                android:textSize="20dp"
                android:layout_margin="10dp"
                android:textColor="#000"
                android:id="@+id/settings"/>

        </LinearLayout>
        <View
            android:layout_width="170dp"
            android:layout_height="1dp"
            android:background="#000"/>

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:elevation="20dp"
            android:background="#afa77d"
            android:onClick="logout">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/logout"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textSize="20dp"
                android:layout_margin="10dp"
                android:textColor="#000"
                android:id="@+id/logout"/>
        </LinearLayout>

        <View
            android:layout_width="170dp"
            android:layout_height="1dp"
            android:background="#000"
            />
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
